<Window x:Class="WantList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WantList"
        mc:Ignorable="d"
        Title="WantList" Height="450" Width="600" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content = "欲しい物リスト"
               Foreground="Aqua"
               FontSize="50"
               Grid.Column="1"
               Grid.Row="0"
               Grid.RowSpan="2"
               Margin="5,24,140,16" Grid.ColumnSpan="2"
               >
        </Label>

        <Button x:Name="addList"
                Content="追加"
                FontSize="30"
                Grid.Column="1"
                Grid.Row="3"
                Grid.RowSpan="2"
                Margin="40,40,60,50" 
                Click="addList_Click"
                >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>



        <Label Content="一覧"
               Foreground="Aqua"
               FontSize="30"
               Grid.Column="3"
               Grid.Row="1"
               Margin="40,34,10,80" 
               Grid.RowSpan="2"
               />

        <Button x:Name="wantList"
                Content="欲しい物"
                FontSize="18"
                Grid.Column="3"
                Grid.Row="2"
                Margin="20,22,20,18" 
                Click="wantList_Click"
                >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

        <Button x:Name="boughtList"
                Content="購入済"
                FontSize="18"
                Grid.Column="3"
                Grid.Row="3"
                Margin="20,10,20,30" 
                Click="boughtList_Click"
                >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>


        <Button x:Name="finish"
                Content="終了"
                Grid.Column="3"
                Grid.Row="4"
                Margin="20,50,20,10" 
                Click="finish_Click"
                />
    </Grid>
</Window>